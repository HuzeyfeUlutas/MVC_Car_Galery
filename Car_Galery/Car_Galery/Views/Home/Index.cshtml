@model List<Car_Galery.Models.BrandModel>

@{
    ViewBag.Title = "Home";
}

<div>
    <div id="slider_home" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#slider_home" data-slide-to="0" class="active"></li>
            <li data-target="#slider_home" data-slide-to="1"></li>
        </ul>
        
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="img-fluid" src="~/Images/HomePage/Slider/slider-1.jpg" alt="Slider_img_1" />
                <div class="carousel-caption">
                    @Html.ActionLink("Show Inventory","Index","Inventory",null,new{@class="btn btn-outline-danger"})
                </div>
            </div>
            <div class="carousel-item">
                <img class="img-fluid" src="~/Images/HomePage/Slider/slider-2.jpg" alt="Slider_img_2" />
                <div class="carousel-caption">
                    @Html.ActionLink("Show Rent A Car Inventory", "Index", "RentCar",null, new { @class = "btn btn-outline-warning" })
                </div>
            </div>
            <a class="carousel-control-prev" href="#slider_home" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#slider_home" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>
</div>

<div class="contain-color">
    <div class="popular_brand">
        <div class="brand-title ">
            <h3>
                POPULAR BRANDS
            </h3>
        </div>
        <div class="row">
            @foreach (var brand in Model)
            {
                <div class="col-lg-2 col-md-4 col-sm-6 col-6 brand-content">
                    <div class="popular-brand-area">
                        <div class="brand-img">
                            <a href="@Url.Action("Index","Inventory",new{brandId = brand.Id})" onclick="RedirectVehicleIndex(this)">
                                <img src="@(((brand.BrandImgUrl == null)|| (brand.BrandImgUrl == ""))  ? Url.Content("~/Images/placeholder.png") : Url.Content(brand.BrandImgUrl))" height="130" alt="" class="brand-img-center">
                            </a>
                        </div>
                        <div>
                            <h4 align="center">@brand.Name</h4>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
