@model List<Car_Galery.Models.TypeModel>

<div>
    <div class="register-login-title">
        <h3 align="left">Types</h3>
    </div>
    <div class="register-login-toolbar" align="center">
        
        <div class="cls">
            <div class="table cls">
                <div class="row row-header">
                    <div class="col-8">
                        <b>Name</b>
                    </div>
                    <div class="col-2">

                    </div>
                    <div class="col-2">

                    </div>
                </div>

                @foreach (var type in Model)
                {
                    <div class="row row-element">
                        <div class="col-8">
                            <p>@type.Name</p>
                        </div>
                        <div class="col-2 cls-edit">
                            <a onclick="Edit(this)" value=@type.Id value1="Type"><i class="fa fa-edit fa-lg"></i></a>
                        </div>
                        <div class="col-2 cls-delete">
                            <a onclick="Delete(this)" value=@type.Id value1="Type"><i class="fa fa-trash fa-lg"></i></a>
                        </div>
                    </div>
                }


            </div>
        </div>

    </div>

</div>
