@model Car_Galery.Models.ViewModels.VehicleModalViewModel

@{
    string name = Model.Name;
}


<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"> @Model.Name</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="CloseModal">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="card text-center">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a id="DetailVehicle" onclick="DetailVehicle(this)" class="nav-link active" value=@Model.Id>Details</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a id="EditVehicle" onclick="EditVehicle(this)" class="nav-link" value=@Model.Id>Edit</a>
                            </li>
                        }
                        
                    </ul>
                </div>
                <div class="card-body" id="card-type-body-Vehicle">
                    @{
                        Html.RenderPartial("_VehicleDetailPartialView", Model);
                    }
                </div>
            </div>
        </div>
    </div>
</div>

