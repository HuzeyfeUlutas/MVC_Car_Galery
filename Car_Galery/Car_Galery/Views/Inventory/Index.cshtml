@model Car_Galery.Models.ViewModels.InventoryViewModel


@{
    ViewBag.Title = "Inventory";
}


<div>
    <div class="inventory-list">
        <h1 align="center"><b>Inventory Listing</b></h1>
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-12 col-12">
            
            <div class="vehicle-filter">
                <div class="filter-title">
                    <h5><i class="fa fa-search"></i> SEARCH FİLTER</h5>
                </div>
                
                <div>
                    
                    @Html.BeginForm()

                </div>
            </div>
            

            <div class="brand-categories">
                <div class="brand-title">
                    <h5><i class="fa fa-align-justify"></i> BRAND CATEGORİES</h5>

                </div>
                <div class="box-brand">
                    <ul id="accordion" class="accordion">
                        @foreach (var brand in Model.BrandModelModels)
                        {
                            <li>
                                <div class="link">
                                    @Ajax.ActionLink(brand.BrandName,"FilterVehicleByBrandCategories",new {brandID = brand.BrandId , modelID = 0 } ,new AjaxOptions()
                                    {
                                        UpdateTargetId = "VehicleList",
                                        InsertionMode = InsertionMode.Replace,
                                        HttpMethod = "POST"
                                    })

                                    <i class="fa fa-chevron-down"></i>
                                </div>
                                <ul class="submenu">
                                    @foreach (var model in brand.brandModels)
                                    {
                                        <li>
                                            @Html.ActionLink(model.Name,null)
                                        </li>
                                    }
                                </ul>
                            </li>
                        }

                    </ul>
                </div>
            </div>
            

        </div>
        <div class="col-lg-9 col-md-9 col-sm-12 col-12">
            <div class="brand-title">
                <h5><i class="fa fa-align-justify"></i> Inventory Listing</h5>
            </div>
            <div class="carboxrow" id="VehicleList">
            @{
                Html.RenderPartial("_VehicleListPartial",Model.VehicleModels);
            }
            </div>
            
        </div>

    </div>
</div>

