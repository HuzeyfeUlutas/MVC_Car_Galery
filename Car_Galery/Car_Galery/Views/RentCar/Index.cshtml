@model Car_Galery.Models.ViewModels.InventoryViewModel



@{
    ViewBag.Title = "Rent A Car";
}


<div>
    <div class="inventory-list">
        <h1 align="center"><b>Rent A Car Listing</b></h1>
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-12 col-sm-12 col-12">

            <div class="vehicle-filter">
                <div class="filter-title">
                    <h5><i class="fa fa-search"></i> SEARCH FİLTER</h5>
                </div>

                <div class="filter-form">
                    @{
                        Html.RenderPartial("_FilterRACPartial", Model);
                    }
                </div>
            </div>


            <div class="brand-categories">
                <div class="brand-title">
                    <h5><i class="fa fa-align-justify"></i> BRAND CATEGORİES</h5>

                </div>
                <div class="box-brand">
                    @{
                        Html.RenderPartial("_BrandCategoriesRACPartial", Model.BrandModelModels);
                    }
                </div>
            </div>


        </div>
        <div class="col-lg-9 col-md-12 col-sm-12 col-12" id="RentACarList">

            @{
                Html.RenderPartial("_VehicleListRACPartial", Model);
            }

        </div>

    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="VehicleAddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        @{
            Html.RenderAction("VehicleAddModal", "Inventory");
        }
    </div>
}

@if (User.IsInRole("Admin"))
{
    <div>
        @{
            Html.RenderPartial("_OperationPartial");
        }
    </div>
}

